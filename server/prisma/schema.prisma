generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id Int @id @default(autoincrement())
  fullName String
  address String
  startYear String 
  department Department @default(Engineering)
  employmentStatus EmploymentStatus @default(Full)
  trainingCompleted Boolean

  @@map ("employees")
}

model User {
  id      Int      @id @default(autoincrement()) 
  role Role @default(USER)
  email   String   @unique 
  createdDate String
  fullName    String
  password String 
  passwordConfirm String?

  @@map ("users")
}

model InputField {
  id          Int      @id @default(autoincrement()) 
  name        String
  type        String
  placeholder String
  inputsId    String  
}

model TableHeadings {
  id          Int      @id @default(autoincrement()) 
  name String
  tableId String
}

enum Role {
  USER
  ADMIN
  GUEST
}

enum EmploymentStatus {
  Contractor
  Part
  Full
}
enum Department {
  Engineering
  HR
  Sales
}


